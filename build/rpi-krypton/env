LD=arm-linux-gnueabihf-ld.gold
OS=linux
CFLAGS=-I$(readlink -m ./tools/depends/arm-linux-gnueabihf/include) -I$(readlink -m ./project/cmake/addons/build/depends/include) -I/usr/include
