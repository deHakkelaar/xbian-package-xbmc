[ -d tools/depends/native/libsquish-native ] || return 0

eval $config_build_env make -C tools/depends/native/libsquish-native all || \
    ( cd tools/depends/native/; git clean -xdf; \
    cd ../../../..; ./bootstrap; make -C tools/depends/native/JsonSchemaBuilder all )

a=$(find tools/depends/native/libsquish-native/.installed*)
[ -h tools/depends/native/libsquish-native/squish-install ] || \
    ( dest=$(grep -w 'prefix=' tools/depends/native/libsquish-native/${a#*.installed-}/squish.pc | awk -F'=' '{print $2}')
      ln -s "$dest" tools/depends/native/libsquish-native/squish-install
    )
